generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

model Photographer {
	id	Int	@id @default(autoincrement())
	name	String
	city	String
	country	String
	tagline	String
	price	Int
	portrait		String
    medias  Media[]
}

model Media {
	id	Int	@id @default(autoincrement())
	photographer	Photographer	@relation(fields: [photographerId], references: [id])
	photographerId	Int
	title	String
	image	String?
    video   String?
	likes	Int
	date	String
	price	Int
}